<%@title = "Neuen Job anlegen" %>

<%= simple_form_for @tender, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :company_name %>
  <%= f.input :sector %>
  <%= f.input :subject %>
  <%= f.input :phone %>
  <%= f.input :description %>
  <%= f.input :contact %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tenders_path, :class => 'btn' %>
  </div>
<% end %>
